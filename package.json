{
  "name": "pow-faucet-server",
  "version": "2.1.5",
  "description": "PoW Faucet Server",
  "main": "dist/app.js",
  "bin": "bundle/powfaucet.cjs",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build-client": "cd faucet-client && node build-client.js",
    "start": "tsc && node dist/app.js",
    "bundle": "tsc && webpack --mode production",
    "test": "mocha --exit --trace-warnings 'tests/**/*.ts'",
    "test-coverage": "c8 --reporter=text --reporter=lcov mocha --exit -r ts-node/register 'tests/**/*.ts'"
  },
  "author": "pk910 (https://pk910.de)",
  "license": "AGPL-3.0",
  "pkg": {
    "scripts": "bundle/*.cjs",
    "assets": [
      "faucet-config.example.yaml",
      "static/**/*"
    ],
    "targets": [
      "node18-linux-x64",
      "node18-win-x64"
    ],
    "outputPath": "bin"
  },
  "devDependencies": {
    "@databases/mysql-test": "^4.0.2",
    "@types/better-sqlite3": "^7.6.9",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/mysql": "^2.15.25",
    "@types/node-fetch": "^2.6.11",
    "@types/node-static": "^0.7.11",
    "@types/randombytes": "^2.0.3",
    "@types/sinon": "^17.0.3",
    "@types/ws": "^8.5.10",
    "c8": "^9.1.0",
    "chai": "^5.1.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "sinon": "^17.0.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tslint": "^6.1.3",
    "typescript": "^5.3.3",
    "webpack": "^5.90.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@brettz9/node-static": "^0.1.1",
    "@ethereumjs/common": "^4.1.0",
    "@ethereumjs/tx": "^5.2.1",
    "@types/node": "^20.11.16",
    "bignumber.js": "^9.1.2",
    "ethereumjs-util": "^7.1.5",
    "hcaptcha": "^0.1.1",
    "html-entities": "^2.4.0",
    "mysql2": "^3.9.1",
    "node-fetch": "^3.3.2",
    "randombytes": "^2.1.0",
    "tiny-typed-emitter": "^2.1.0",
    "web3": "^4.5.0",
    "web3-eth-ens": "^4.0.8",
    "web3-providers-ipc": "^4.0.7",
    "ws": "^8.16.0",
    "yaml": "^2.3.4"
  }
}
